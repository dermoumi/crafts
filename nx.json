{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "crafts",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "test:cov"]
      }
    }
  },
  "namedInputs": {
    "sourceFiles": [
      "{projectRoot}/src/**/*",
      "!{projectRoot}/src/**/*.test.ts"
    ],
    "testFiles": ["{projectRoot}/src/**/*", "{projectRoot}/setup-tests.ts"],
    "miscFiles": ["{projectRoot}/**/*.md"],
    "buildConfig": [
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/vite.config.ts"
    ],
    "lintConfig": [
      "{projectRoot}/.eslintrc.cjs",
      "{projectRoot}/.eslintignore",
      "{projectRoot}/.prettierignore",
      "{projectRoot}/tsconfig.*.json"
    ],
    "baseLintConfig": ["{projectRoot}/.noop"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["sourceFiles", "^sourceFiles", "buildConfig", "^buildConfig"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": [
        "miscFiles",
        "sourceFiles",
        "^sourceFiles",
        "testFiles",
        "buildConfig",
        "lintConfig",
        "^baseLintConfig"
      ],
      "outputs": [".eslintcache"]
    },
    "test": {
      "inputs": ["testFiles", "^sourceFiles", "buildConfig", "^buildConfig"]
    },
    "test:cov": {
      "inputs": ["testFiles", "^sourceFiles", "buildConfig", "^buildConfig"],
      "outputs": ["coverage/**"]
    }
  }
}
